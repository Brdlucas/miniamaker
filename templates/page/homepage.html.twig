{% extends 'base.html.twig' %}
{% block title %}Hello PageController!
{% endblock %}
{% block body %}
	<div class="d-flex flex-column gap-3">
		<div class="container w-100 p-3 rounded border border-top-10  shadow text-dark d-flex justify-content-between">
			<div class="w-100 h-100">
				<h2>Vos messages</h2>
				<p>vous avez un total de
					{{app.user.discussions.owner.messages|length}}
					messages</p>
				<a href={{path('app_message')}} class="btn btn-dark ">Voir les messages</a>
			</div>
		</div>
		<div class="d-flex justify-content-center  text-center gap-5 p-5">

			<div class="col">
				<div class="card mb-4 rounded-3 shadow-sm border-primary">
					<div class="card-header py-3 text-bg-primary border-primary">
						<h4 class="my-0 fw-normal">Mensuel</h4>
					</div>
					<div class="card-body">
						<h1 class="card-title pricing-card-title">99€<small class="text-body-secondary fw-light">/mo</small>
						</h1>
						<ul class="list-unstyled mt-3 mb-4">
							<li>Payer tout les mois</li>
							<li>plus convenable pour les débutants</li>
							<li>Annuler quand vous voulez</li>
							<li>En savoir plus +</li>
						</ul>
						<a href={{path('app_profile')}} type="button" class="w-100 btn btn-lg btn-primary">S'abonner</a>
					</div>
				</div>
			</div>

			<div class="col">
				<div class="card mb-4 rounded-3 shadow-sm border-primary">
					<div class="card-header py-3 text-bg-primary border-primary">
						<h4 class="my-0 fw-normal">Annuel</h4>
					</div>
					<div class="card-body">
						<h1 class="card-title pricing-card-title">990€<small class="text-body-secondary fw-light">/mo</small>
						</h1>
						<ul class="list-unstyled mt-3 mb-4">
							<li>Payer a l'année</li>
							<li>Plus convenable pour les Pro ou les Agents</li>
							<li>Annuler quand vous voulez</li>
							<li>En savoir plus +</li>

						</ul>
						<a href={{path('app_profile')}} class="w-100 btn btn-lg btn-primary">S'abonner</a>
					</div>
				</div>
			</div>
		</div>

		<section class="bg-white ">
			{% include 'components/boxes.html.twig' %}
		</section>
	</div>

{% endblock %}